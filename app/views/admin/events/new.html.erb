<h1>Create a New Event for <%= @kid.name %></h1>

<%= form_for [:admin, @kid, @event] do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :location %>
<%= f.text_field :location %>
<%= f.label "Day" %>
<%= f.select :day_of_week, [("Monday"), ("Tuesday"), ("Wednesday"),
  ("Thursday"), ("Friday"), ("Saturday"), ("Sunday")] %>
<%= f.label :time %>
<%= f.time_field :time %>
<%= f.label "Additional Notes: " %>
<%= f.text_field :description %>
<%= f.submit %>
<% end %>
