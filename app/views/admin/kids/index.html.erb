<h1>The Kids!</h1>

<p><%= link_to "Add a Kiddo", new_admin_kid_path, class: 'btn btn-info' %></p>


<div class='kids'>
  <% @kids.each do |kid| %>
  <div id="kid-<%= kid.id %>">
    <h3><%= link_to kid.name, admin_kid_path(kid) %></h3>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Event</th>
            <th scope="col">Day</th>
          </tr>
        </thead>
        <% kid.events.each do |event| %>
          <tbody>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.day_of_week %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <% end %>
</div>
