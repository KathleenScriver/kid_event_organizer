<h1><%= @kid.name %></h1>

<p><%= link_to "Edit", edit_admin_kid_path(@kid) %></p>
<p><%= link_to "Delete Kid", admin_kid_path(@kid), method: :delete,
    data: {confirm: "Are you sure you want to delete #{@kid.name}?"} %></p>

<h3>Events</h3>
<% @kid.events.each do |event| %>
  <h6><%= event.title %></h6>
  <p>Location: <%= event.location %></p>
  <p>Day: <%= event.day_of_week %></p>
  <p>Time: <%= event.time.strftime("%l:%M %P") %></p>
  <p>Notes: <%= event.description %></p>
  <p><%= link_to "Edit", edit_event_path(event) %></p>
  <p><%= link_to "Delete", event_path(event), method: :delete,
        data: {confirm: "Are you sure you want to delete #{event.title}?"} %></p>
<% end %>

