<h1>Events</h1>

<%= link_to "Kid View", kids_path, class: 'btn' %>
<%= link_to "Week View", kids_path(sort: "week"), class: 'btn' %>

<h3>Monday</h3>
<div class='table-responsive'>
  <table class='table'>
    <thead>
      <tr>
        <th scope="col">Event</th>
        <th scope="col">Kid</th>
      </tr>
    </thead>
  <% @sorted_events.each do |day, event| %>
  <tbody>
    <tr>
    <% if day=="Monday" %>
      <td><%= event.title %></td>
      <td><%= event.kid.name %></td>
    <% end %>
    <tr>
  </tbody>
  <% end %>
  </table>
</div>
